@article{markmannImpactPortableNormothermic2022,
  title = {Impact of {{Portable Normothermic Blood-Based Machine Perfusion}} on {{Outcomes}} of {{Liver Transplant}}: {{The OCS Liver PROTECT Randomized Clinical Trial}}},
