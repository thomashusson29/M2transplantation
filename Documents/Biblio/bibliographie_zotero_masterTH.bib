@article{jayantRoleNormothermicPerfusion2018,
  title = {The {{Role}} of {{Normothermic Perfusion}} in {{Liver Transplantation}} ({{TRaNsIT Study}}): {{A Systematic Review}} of {{Preliminary Studies}}},
