@article{nasrallaRandomizedTrialNormothermic2018,
  title = {A Randomized Trial of Normothermic Preservation in Liver Transplantation},
  author = {Nasralla, David and Coussios, Constantin C. and Mergental, Hynek and Akhtar, M. Zeeshan and Butler, Andrew J. and Ceresa, Carlo D. L. and Chiocchia, Virginia and Dutton, Susan J. and García-Valdecasas, Juan Carlos and Heaton, Nigel and Imber, Charles and Jassem, Wayel and Jochmans, Ina and Karani, John and Knight, Simon R. and Kocabayoglu, Peri and Malagò, Massimo and Mirza, Darius and Morris, Peter J. and Pallan, Arvind and Paul, Andreas and Pavel, Mihai and Perera, M. Thamara P. R. and Pirenne, Jacques and Ravikumar, Reena and Russell, Leslie and Upponi, Sara and Watson, Chris J. E. and Weissenbacher, Annemarie and Ploeg, Rutger J. and Friend, Peter J.},
