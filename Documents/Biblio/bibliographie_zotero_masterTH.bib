@article{boteonExSituMachine2018,
  title = {Ex Situ Machine Perfusion as a Tool to Recondition Steatotic Donor Livers: {{Troublesome}} Features of Fatty Livers and the Role of Defatting Therapies. {{A}} Systematic Review.},
  shorttitle = {Ex Situ Machine Perfusion as a Tool to Recondition Steatotic Donor Livers},
