@article{mullerStrategiesConservationGreffons2022,
  title = {Stratégies de Conservation Des Greffons En Transplantation Hépatique~–~Progrès et Perspectives En {{France}}},
  author = {Muller, X. and Rossignol, G. and Mohkam, K. and Mabrut, J. Y.},
