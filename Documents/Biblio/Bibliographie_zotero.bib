@article{bodewesOxygenTransportEx2020,
  title = {Oxygen {{Transport}} during {{Ex Situ Machine Perfusion}} of {{Donor Livers Using Red Blood Cells}} or {{Artificial Oxygen Carriers}}},
  author = {Bodewes, Silke B. and family=Leeuwen, given=Otto B., prefix=van, useprefix=true and Thorne, Adam M. and Lascaris, Bianca and Ubbink, Rinse and Lisman, Ton and Monbaliu, Diethard and De Meijer, Vincent E. and Nijsten, Maarten W. N. and Porte, Robert J.},
  date = {2020-12-28},
  journaltitle = {International Journal of Molecular Sciences},
